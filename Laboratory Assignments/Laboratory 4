/*
Create the following table and insert 10 rows in the table
EMP(EMPNO, ENAME, JOB, MGR, HIREDATE, SAL, COMM, DEPT_NAME)

QUESTION 11 TO 13 ARE THE INSTRUCTIONS TO MAKE THE DEFAULT TABLE

*/

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/
-- Question 14
SELECT * FROM dept;
SELECT * FROM emp;

ALTER TABLE EMP ADD DEPT_NAME VARCHAR2(255);

UPDATE EMP SET DEPT_NAME = 'Accounting' WHERE DEPTNO = 10;
UPDATE EMP SET DEPT_NAME = 'Research' WHERE DEPTNO = 20;
UPDATE EMP SET DEPT_NAME = 'Sales' WHERE DEPTNO = 30;
UPDATE EMP SET DEPT_NAME = 'Operations' WHERE DEPTNO = 40;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/
SELECT * FROM EMP;

-- Question 14

SELECT ENAME FROM EMP WHERE JOB <> 'Manager';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 15
SELECT ENAME FROM EMP WHERE ENAME LIKE '_i%';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 16
SELECT COUNT(*) FROM EMP WHERE JOB = 'Manager';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 17
SELECT MAX(SAL) AS MAXIMUM, MIN(SAL) AS MINIMUM, SUM(SAL) AS TOTAL, AVG(SAL) AS AVERAGE FROM EMP;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 18
SELECT MAX(SAL) AS MAXIMUM, MIN(SAL) AS MINIMUM, SUM(SAL) AS TOTAL, AVG(SAL) AS AVERAGE FROM EMP WHERE JOB = 'Manager';
SELECT MAX(SAL) AS MAXIMUM, MIN(SAL) AS MINIMUM, SUM(SAL) AS TOTAL, AVG(SAL) AS AVERAGE FROM EMP WHERE JOB = 'President';
SELECT MAX(SAL) AS MAXIMUM, MIN(SAL) AS MINIMUM, SUM(SAL) AS TOTAL, AVG(SAL) AS AVERAGE FROM EMP WHERE JOB = 'Analyst';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 19
SELECT COUNT(*) AS "NUMBER OF MANAGERS" FROM EMP WHERE JOB = 'Manager';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 20
SELECT * FROM EMP WHERE HIREDATE > '01/01/1980';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 21
SELECT MAX(SAL) FROM EMP WHERE JOB = 'Salesman';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 22
SELECT MIN(SAL) FROM EMP WHERE JOB = 'Clerk';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 23
SELECT ENAME FROM EMP WHERE SAL > (SELECT SAL FROM EMP WHERE ENAME = 'Turner');

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 24
SELECT DEPT_NAME FROM EMP WHERE ENAME = 'Ford';

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 25
SELECT MAX(SAL), FROM EMP GROUP BY DEPT_NAME;

