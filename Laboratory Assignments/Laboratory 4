SELECT * FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/
                                    -- Perform The Following Queries using DUAL
/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 1
SELECT SYSDATE FROM DUAL;
SELECT to_char(SYSDATE, 'MM-DD-YYYY HH24:MI:SS') FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 2
SELECT 2*2 FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 3
SELECT ABS(-15) FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 4
SELECT SQRT(15) FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 5
SELECT ROUND(15.19) FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 6
SELECT LOWER('IVAN BAYROSS') FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

--Question 7
SELECT UPPER('IVAN BAYROSS') FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 8
SELECT ADD_MONTHS(SYSDATE,5) FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 9
SELECT MONTHS_BETWEEN(TO_DATE('02-JUL-2001', 'DD-MON-YYYY'), TO_DATE('02-JAN-2001', 'DD-MON-YYYY')) FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/

-- Question 10
SELECT TO_DATE(SYSDATE, 'DD/MM/YYYY') FROM DUAL;

/*----------------------------------------------------------------------------------------------------------------------------------------------------*/


